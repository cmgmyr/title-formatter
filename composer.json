{
    "name": "cmgmyr/title-formatter",
    "description": "A simple to use text formatter, primarily used for page/blog titles",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Gmyr",
            "email": "cmgmyr@gmail.com",
            "homepage": "https://github.com/cmgmyr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1",
        "ext-mbstring" : "*"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "scrutinizer/ocular": "^1.5",
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "Cmgmyr\\TitleFormatter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cmgmyr\\TitleFormatter\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
