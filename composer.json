{
    "name": "cmgmyr/title-formatter",
    "description": "A simple to use text formatter, primarily used for page/blog titles",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Gmyr",
            "email": "cmgmyr@gmail.com",
            "homepage": "https://github.com/cmgmyr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1",
        "ext-mbstring" : "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpunit/phpunit" : ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "Cmgmyr\\TitleFormatter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cmgmyr\\TitleFormatter\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "fix-style": "vendor/bin/php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
